    <style name="Theme.WhereIsMyCoffee" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary branding color. -->
        <item name="colorPrimary">@color/coffee_primary</item>
        <item name="colorPrimaryVariant">@color/coffee_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary branding color. -->
        <item name="colorSecondary">@color/coffee_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/coffee_background</item>
        <item name="android:textColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/coffee_primary_variant</item>
    </style>
</resources>